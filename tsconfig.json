{
    "compilerOptions": {
        "target": "es6",
        "lib": [ "dom", "ES2015", "ES2016" ],
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
